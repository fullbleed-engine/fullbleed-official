{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fullbleed.dev/schemas/fullbleed.a11y.verify.v1.schema.json",
  "title": "FullBleed Accessibility Verifier Report v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "target",
    "profile",
    "conformance_status",
    "gate",
    "summary",
    "findings",
    "coverage",
    "tooling"
  ],
  "properties": {
    "schema": {
      "const": "fullbleed.a11y.verify.v1"
    },
    "target": {
      "$ref": "#/$defs/target"
    },
    "profile": {
      "type": "string",
      "minLength": 1
    },
    "conformance_status": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "claim_scope",
        "manual_review_required"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass_machine_subset",
            "fail_machine_subset",
            "manual_review_required",
            "not_applicable"
          ]
        },
        "claim_scope": {
          "type": "string",
          "enum": [
            "machine_subset",
            "manual_required",
            "unsupported"
          ]
        },
        "manual_review_required": {
          "type": "boolean"
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "gate": {
      "$ref": "#/$defs/gate"
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pass_count",
        "fail_count",
        "warn_count",
        "manual_needed_count",
        "not_applicable_count"
      ],
      "properties": {
        "pass_count": {
          "type": "integer",
          "minimum": 0
        },
        "fail_count": {
          "type": "integer",
          "minimum": 0
        },
        "warn_count": {
          "type": "integer",
          "minimum": 0
        },
        "manual_needed_count": {
          "type": "integer",
          "minimum": 0
        },
        "not_applicable_count": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/finding"
      }
    },
    "observability": {
      "$ref": "#/$defs/observability"
    },
    "coverage": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "evaluated_rule_count",
        "applicable_rule_count",
        "machine_rule_count",
        "manual_rule_count",
        "manual_needed_count",
        "not_evaluated_rule_count"
      ],
      "properties": {
        "evaluated_rule_count": {
          "type": "integer",
          "minimum": 0
        },
        "applicable_rule_count": {
          "type": "integer",
          "minimum": 0
        },
        "machine_rule_count": {
          "type": "integer",
          "minimum": 0
        },
        "manual_rule_count": {
          "type": "integer",
          "minimum": 0
        },
        "manual_needed_count": {
          "type": "integer",
          "minimum": 0
        },
        "not_evaluated_rule_count": {
          "type": "integer",
          "minimum": 0
        },
        "rule_pack_coverage": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "pack_id",
              "evaluated",
              "total"
            ],
            "properties": {
              "pack_id": {
                "type": "string",
                "minLength": 1
              },
              "evaluated": {
                "type": "integer",
                "minimum": 0
              },
              "total": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        },
        "wcag20aa": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "registry_id",
            "registry_version",
            "wcag_version",
            "target_level",
            "total_entries",
            "success_criteria_total",
            "conformance_requirements_total",
            "mapped_entry_count",
            "implemented_mapped_entry_count",
            "implemented_mapped_entry_evaluated_count",
            "implemented_mapped_entry_pending_count",
            "unmapped_entry_count"
          ],
          "properties": {
            "registry_id": {
              "type": "string",
              "minLength": 1
            },
            "registry_version": {
              "type": "integer",
              "minimum": 1
            },
            "wcag_version": {
              "type": "string",
              "const": "2.0"
            },
            "target_level": {
              "type": "string",
              "const": "AA"
            },
            "total_entries": {
              "type": "integer",
              "minimum": 1
            },
            "success_criteria_total": {
              "type": "integer",
              "minimum": 1
            },
            "conformance_requirements_total": {
              "type": "integer",
              "minimum": 1
            },
            "mapped_entry_count": {
              "type": "integer",
              "minimum": 0
            },
            "mapped_success_criteria_count": {
              "type": "integer",
              "minimum": 0
            },
            "mapped_conformance_requirement_count": {
              "type": "integer",
              "minimum": 0
            },
            "implemented_mapped_entry_count": {
              "type": "integer",
              "minimum": 0
            },
            "implemented_mapped_entry_evaluated_count": {
              "type": "integer",
              "minimum": 0
            },
            "implemented_mapped_entry_pending_count": {
              "type": "integer",
              "minimum": 0
            },
            "supporting_only_mapped_entry_count": {
              "type": "integer",
              "minimum": 0
            },
            "planned_only_mapped_entry_count": {
              "type": "integer",
              "minimum": 0
            },
            "unmapped_entry_count": {
              "type": "integer",
              "minimum": 0
            },
            "implemented_mapped_result_counts": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "pass": { "type": "integer", "minimum": 0 },
                "fail": { "type": "integer", "minimum": 0 },
                "warn": { "type": "integer", "minimum": 0 },
                "manual_needed": { "type": "integer", "minimum": 0 },
                "not_applicable": { "type": "integer", "minimum": 0 },
                "unknown": { "type": "integer", "minimum": 0 }
              }
            }
          }
        },
        "section508": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "registry_id",
            "registry_version",
            "profile_id",
            "total_entries",
            "specific_entries_total",
            "inherited_wcag_entries_total",
            "mapped_entry_count",
            "implemented_mapped_entry_count",
            "implemented_mapped_entry_evaluated_count",
            "implemented_mapped_entry_pending_count",
            "unmapped_entry_count"
          ],
          "properties": {
            "registry_id": { "type": "string", "minLength": 1 },
            "registry_version": { "type": "integer", "minimum": 1 },
            "profile_id": { "type": "string", "minLength": 1 },
            "total_entries": { "type": "integer", "minimum": 1 },
            "specific_entries_total": { "type": "integer", "minimum": 0 },
            "inherited_wcag_entries_total": { "type": "integer", "minimum": 0 },
            "mapped_entry_count": { "type": "integer", "minimum": 0 },
            "implemented_mapped_entry_count": { "type": "integer", "minimum": 0 },
            "implemented_mapped_entry_evaluated_count": { "type": "integer", "minimum": 0 },
            "implemented_mapped_entry_pending_count": { "type": "integer", "minimum": 0 },
            "supporting_only_mapped_entry_count": { "type": "integer", "minimum": 0 },
            "planned_only_mapped_entry_count": { "type": "integer", "minimum": 0 },
            "unmapped_entry_count": { "type": "integer", "minimum": 0 },
            "specific_mapped_entry_count": { "type": "integer", "minimum": 0 },
            "specific_implemented_mapped_entry_count": { "type": "integer", "minimum": 0 },
            "specific_implemented_mapped_entry_evaluated_count": { "type": "integer", "minimum": 0 },
            "specific_implemented_mapped_entry_pending_count": { "type": "integer", "minimum": 0 },
            "specific_unmapped_entry_count": { "type": "integer", "minimum": 0 },
            "inherited_wcag_registry_id": { "type": "string", "minLength": 1 },
            "inherited_wcag_implemented_mapped_entry_count": { "type": "integer", "minimum": 0 },
            "inherited_wcag_implemented_mapped_entry_evaluated_count": { "type": "integer", "minimum": 0 },
            "inherited_wcag_unmapped_entry_count": { "type": "integer", "minimum": 0 },
            "implemented_mapped_result_counts": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "pass": { "type": "integer", "minimum": 0 },
                "fail": { "type": "integer", "minimum": 0 },
                "warn": { "type": "integer", "minimum": 0 },
                "manual_needed": { "type": "integer", "minimum": 0 },
                "not_applicable": { "type": "integer", "minimum": 0 },
                "unknown": { "type": "integer", "minimum": 0 }
              }
            }
          }
        }
      }
    },
    "tooling": {
      "$ref": "#/$defs/tooling"
    },
    "artifacts": {
      "$ref": "#/$defs/artifacts"
    },
    "manual_review_debt": {
      "$ref": "#/$defs/manualDebt"
    },
    "wcag20aa_claim_readiness": {
      "$ref": "#/$defs/wcag20aaClaimReadiness"
    }
  },
  "$defs": {
    "target": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "html_path",
        "css_path"
      ],
      "properties": {
        "html_path": {
          "type": "string",
          "minLength": 1
        },
        "css_path": {
          "type": "string",
          "minLength": 1
        },
        "source_pdf_path": {
          "type": "string"
        },
        "document_id": {
          "type": "string"
        },
        "target_hash": {
          "type": "string"
        }
      }
    },
    "gate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ok",
        "mode",
        "error_count",
        "warn_count"
      ],
      "properties": {
        "ok": {
          "type": "boolean"
        },
        "mode": {
          "type": "string",
          "enum": [
            "off",
            "warn",
            "error"
          ]
        },
        "error_count": {
          "type": "integer",
          "minimum": 0
        },
        "warn_count": {
          "type": "integer",
          "minimum": 0
        },
        "failed_rule_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "tooling": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "fullbleed_version",
        "report_schema_version",
        "generated_at"
      ],
      "properties": {
        "fullbleed_version": {
          "type": "string",
          "minLength": 1
        },
        "engine_version": {
          "type": "string"
        },
        "audit_contract_id": {
          "type": "string"
        },
        "audit_contract_version": {
          "type": "string"
        },
        "audit_contract_fingerprint": {
          "type": "string"
        },
        "audit_registry_hash": {
          "type": "string"
        },
        "wcag20aa_registry_hash": {
          "type": "string"
        },
        "section508_html_registry_hash": {
          "type": "string"
        },
        "report_schema_version": {
          "type": "string",
          "minLength": 1
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "adapter_versions": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "html_hash": {
          "type": "string"
        },
        "css_hash": {
          "type": "string"
        },
        "css_linked": {
          "type": "boolean"
        },
        "packaging_mode": {
          "type": "string"
        }
      }
    },
    "manualDebt": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "item_count"
      ],
      "properties": {
        "item_count": {
          "type": "integer",
          "minimum": 0
        },
        "high_risk_count": {
          "type": "integer",
          "minimum": 0
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "id",
              "reason"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "critical",
                  "high",
                  "medium",
                  "low",
                  "info"
                ]
              }
            }
          }
        }
      }
    },
    "countMap": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0
      }
    },
    "observability": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "original_finding_count",
        "reported_finding_count",
        "dedup_event_count",
        "dedup_merged_finding_count",
        "correlated_finding_count",
        "stage_counts",
        "source_counts"
      ],
      "properties": {
        "original_finding_count": {
          "type": "integer",
          "minimum": 0
        },
        "reported_finding_count": {
          "type": "integer",
          "minimum": 0
        },
        "dedup_event_count": {
          "type": "integer",
          "minimum": 0
        },
        "dedup_merged_finding_count": {
          "type": "integer",
          "minimum": 0
        },
        "correlated_finding_count": {
          "type": "integer",
          "minimum": 0
        },
        "stage_counts": {
          "$ref": "#/$defs/countMap"
        },
        "source_counts": {
          "$ref": "#/$defs/countMap"
        },
        "original_stage_counts": {
          "$ref": "#/$defs/countMap"
        },
        "original_source_counts": {
          "$ref": "#/$defs/countMap"
        },
        "correlation_index": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/correlationIndexEntry"
          }
        }
      }
    },
    "correlationIndexEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rule_id",
        "canonical_stage",
        "canonical_source",
        "canonical_verdict",
        "merged_finding_count",
        "merged_pre_render_count",
        "merged_stage_counts",
        "merged_source_counts"
      ],
      "properties": {
        "rule_id": {
          "type": "string",
          "pattern": "^[a-z0-9_.-]+$"
        },
        "canonical_stage": {
          "type": "string"
        },
        "canonical_source": {
          "type": "string"
        },
        "canonical_verdict": {
          "type": "string"
        },
        "merged_finding_count": {
          "type": "integer",
          "minimum": 0
        },
        "merged_pre_render_count": {
          "type": "integer",
          "minimum": 0
        },
        "merged_stage_counts": {
          "$ref": "#/$defs/countMap"
        },
        "merged_source_counts": {
          "$ref": "#/$defs/countMap"
        }
      }
    },
    "wcag20aaClaimReadiness": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "target",
        "status",
        "claim_ready",
        "manual_review_required",
        "manual_review_debt_count",
        "machine_blocker_count",
        "coverage_gap_count",
        "implemented_mapped_entry_count",
        "implemented_mapped_entry_evaluated_count",
        "implemented_mapped_entry_pending_count",
        "unmapped_entry_count"
      ],
      "properties": {
        "target": {
          "type": "string",
          "const": "wcag20aa"
        },
        "status": {
          "type": "string",
          "enum": [
            "blocked_machine_failures",
            "blocked_coverage_gaps",
            "manual_evidence_required",
            "claim_ready"
          ]
        },
        "claim_ready": {
          "type": "boolean"
        },
        "manual_review_required": {
          "type": "boolean"
        },
        "manual_review_debt_count": {
          "type": "integer",
          "minimum": 0
        },
        "machine_blocker_count": {
          "type": "integer",
          "minimum": 0
        },
        "coverage_gap_count": {
          "type": "integer",
          "minimum": 0
        },
        "implemented_mapped_entry_count": {
          "type": "integer",
          "minimum": 0
        },
        "implemented_mapped_entry_evaluated_count": {
          "type": "integer",
          "minimum": 0
        },
        "implemented_mapped_entry_pending_count": {
          "type": "integer",
          "minimum": 0
        },
        "unmapped_entry_count": {
          "type": "integer",
          "minimum": 0
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "finding": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rule_id",
        "applicability",
        "verification_mode",
        "verdict",
        "severity",
        "confidence",
        "stage",
        "source",
        "message"
      ],
      "properties": {
        "rule_id": {
          "type": "string",
          "pattern": "^[a-z0-9_.-]+$"
        },
        "applicability": {
          "type": "string",
          "enum": [
            "applicable",
            "not_applicable",
            "unknown"
          ]
        },
        "verification_mode": {
          "type": "string",
          "enum": [
            "machine",
            "hybrid",
            "semi_automated",
            "manual"
          ]
        },
        "verdict": {
          "type": "string",
          "enum": [
            "pass",
            "fail",
            "warn",
            "manual_needed",
            "not_applicable"
          ]
        },
        "severity": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low",
            "info"
          ]
        },
        "confidence": {
          "type": "string",
          "enum": [
            "certain",
            "high",
            "medium",
            "low"
          ]
        },
        "stage": {
          "type": "string",
          "enum": [
            "pre-render",
            "post-emit",
            "post-render",
            "adapter"
          ]
        },
        "source": {
          "type": "string",
          "enum": [
            "fullbleed",
            "a11y_contract",
            "lighthouse",
            "axe",
            "manual",
            "adapter"
          ]
        },
        "message": {
          "type": "string",
          "minLength": 1
        },
        "standard_refs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "fix_hint": {
          "type": "string"
        },
        "related_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "evidence": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/evidence"
          }
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "selector": {
          "type": "string"
        },
        "dom_path": {
          "type": "string"
        },
        "semantic_path": {
          "type": "string"
        },
        "page_index": {
          "type": "integer",
          "minimum": 0
        },
        "snippet": {
          "type": "string"
        },
        "values": {
          "type": "object",
          "additionalProperties": true
        },
        "artifact_ref": {
          "type": "string"
        },
        "diagnostic_ref": {
          "type": "string"
        }
      }
    }
  }
}
